<p class="text-success text-center"><%= notice %></p>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-7">

      <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
          <h4 class="mb-0">Product Details</h4>
        </div>

        <div class="card-body">

          <div class="row mb-3">
            <div class="col-4 fw-bold">Name:</div>
            <div class="col-8"><%= @product.name %></div>
          </div>

          <div class="row mb-3">
            <div class="col-4 fw-bold">Description:</div>
            <div class="col-8"><%= @product.description %></div>
          </div>

          <div class="row mb-3">
            <div class="col-4 fw-bold">Price:</div>
            <div class="col-8">â‚¹ <%= @product.price %></div>
          </div>

          <div class="row mb-3">
            <div class="col-4 fw-bold">Stock:</div>
            <div class="col-8"><%= @product.stock %></div>
          </div>

          <div class="row mb-3">
            <div class="col-4 fw-bold">Status:</div>
            <div class="col-8">
              <% if @product.is_active %>
                <span class="badge bg-success">Active</span>
              <% else %>
                <span class="badge bg-danger">Inactive</span>
              <% end %>
            </div>
          </div>

          <!-- Review -->
          <div class="row mb-3">
            <div class="col-4 fw-bold">Review:</div>
            <div class="col-8 text-warning">
              <%= @product.review.present? ? @product.review : "-" %>
            </div>
          </div>

          <!-- Email -->
          <div class="row mb-3">
            <div class="col-4 fw-bold">Email:</div>
            <div class="col-8 text-warning">
              <%= @product.email.present? ? @product.email : "-" %>
            </div>
          </div>

          <!-- Product Image -->
          <div class="row mb-3">
  <div class="col-4 fw-bold">Product Image:</div>
  <div class="col-8">
    <% if @product.product_image.attached? %>
      <% @product.product_image.each do |image| %>
        <%= image_tag image,
              class: "img-fluid rounded me-2 mb-2",
              style: "max-height: 150px;",
              alt: "Product image" %>
      <% end %>
    <% else %>
      <span class="text-muted">No images uploaded</span>
    <% end %>
  </div>
</div>


        </div>

        <div class="card-footer text-center">
          <%= link_to "Edit", edit_product_path(@product), class: "btn btn-warning me-2" %>
          <%= link_to "Back", products_path, class: "btn btn-secondary me-2" %>

          <%= button_to "Delete",
                product_path(@product),
                method: :delete,
                data: { confirm: "Are you sure?" },
                class: "btn btn-danger d-inline" %>
        </div>

      </div>

    </div>
  </div>
</div>
