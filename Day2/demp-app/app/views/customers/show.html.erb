<p class="text-success text-center"><%= notice %></p>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <div class="card shadow-lg">
        <div class="card-header bg-success text-white text-center">
          <h3 class="mb-0">Customer Details</h3>
        </div>

        <div class="card-body text-center">
          <%= render @customer %>
        </div>

        <div class="card-footer text-center">
          <%= link_to "Edit", edit_customer_path(@customer), class: "btn btn-warning me-2" %>
          <%= link_to "Back", customers_path, class: "btn btn-secondary me-2" %>
          <%= button_to "Delete", @customer, method: :delete, 
                data: { confirm: "Are you sure?" }, 
                class: "btn btn-danger d-inline" %>
        </div>
      </div>

    </div>
  </div>
</div>

